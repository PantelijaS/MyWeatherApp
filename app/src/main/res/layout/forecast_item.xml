<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_day"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/text_temperature"
        app:layout_constraintEnd_toEndOf="@+id/text_temperature"
        app:layout_constraintStart_toStartOf="@+id/imageViewForcast"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewForcast"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/text_temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_day"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="252dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="51dp"
        android:text="TextView"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewForcast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewForcast"
        app:layout_constraintTop_toBottomOf="@+id/text_day" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@+id/text_temperature"
        app:layout_constraintStart_toStartOf="@+id/imageViewForcast"
        app:layout_constraintTop_toBottomOf="@+id/text_temperature" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="weather"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_city_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:text="time"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/img_weather"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/ic_launcher"/>


            <TextView
                android:id="@+id/text_city_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:text="temperature"
                android:textSize="20dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_city_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:text="description"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_city_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:text="wind"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_city_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:text="pressure"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_city_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:text="humidity"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_city_sunrise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:text="sunrise"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_city_sunset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:text="sunset"
            android:textSize="20sp" />
    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:indeterminate="true"/>

</RelativeLayout>